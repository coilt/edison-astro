<Layout title="Edison Army Showcase" headerClass="invert-header fullscreen-menu">
  <title>Manifesto - Creative Portfolio Template</title>
  <body class="uppercase-titles" data-primary-color="#8c6144">
    <main>
      <Preloader centerLine="Loading" />
      <div class="cd-index cd-main-content">
