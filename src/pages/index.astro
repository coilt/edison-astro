---
import Layout from '../layouts/Layout.astro'
import Hero from '@components/Hero.astro'
import Footer from '@components/Footer.astro'
import Main from '@components/Main.astro'
import Menu from '@components/Menu.astro'
import '@styles/video.css'

import '../styles/globals.css'
import '../styles/all.min.css'
import '../styles/shortcodes.css'

import Preloader from '@components/Preloader.astro'

interface Props {
  class?: string
  menuColor?: string
}

const { class: className = '', menuColor = '#000000' } = Astro.props
---

<Layout
  title="Edison Army Homepage"
  headerClass="white-header fullscreen-menu invert-header"
  bodyClass="black"
  primaryColor="#8c6144"
  >

  <svg width="0" height="0" style="position: absolute;">
    <defs>
      <clipPath id="customMask" clipPathUnits="objectBoundingBox">
        <!-- Your custom mask path here -->
        <path d="M0,0 C0.5,0 0.5,1 1,1 L1,0 Z"/>
      </clipPath>
    </defs>
  </svg>
  
  <main>
    <Menu /> 
    <div class="cd-index cd-main-content">
      <div id="page-content" class="light-content" data-bgcolor="#080532">
        <Hero />
        <Main />
        <div id="app"></div>
      </div>
    </div>
  </main>
  <div class="cd-cover-layer"></div>
  <div id="clone-image">
    <div class="hero-translate"></div>
  </div>
  <div id="rotate-device"></div>
</Layout>

<script is:inline src="/scripts.js" type="module" "client:load": true;></script>
<script is:inline src="/plugins.js" type="module" "client:load": true;></script>
<script is:inline src="/GridToFullScreen.js" type="module" "client:load": true;
></script>
